#!/usr/bin/make -f
%:
	env DH_VERBOSE=1 dh $@

DESTDIR=../debian/tmp
PREFIX=/usr

override_dh_auto_configure:
	mkdir -p build
	mkdir -p debian/tmp
	(cd build; ../aimake --config-only -i $(PREFIX) --destdir=../debian/tmp -- ..)

override_dh_auto_build:
	(cd build; ../aimake -i $(PREFIX) --destdir=../debian/tmp -- ..)

override_dh_auto_install:
	(cd build; ../aimake --install-only -i $(PREFIX) --destdir=../debian/tmp -- ..)

override_dh_auto_clean:
	rm -f build
	rm -f debian/tmp
